<!DOCTYPE html>
<html lang="vi">
<head>
  <meta charset="utf-8">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.7.1/css/all.min.css" integrity="sha512-5Hs3dF2AEPkpNAR7UiOHba+lRSJNeM2ECkwxUIxC1Q/FLycGTbNapWXB4tP889k5T5Ju8fs4b1P5z/iB4nMfSQ==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Lexend:wght@100..900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">
  <style>
    * {
      font-family: 'Lexend', sans-serif;
      font-size: 16px;
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      margin: 0;
    }

    header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 10px 30px;
      background-color: #fff;
      border-bottom: 2px solid #ddd;
      box-shadow: 0px 2px 5px rgba(0, 0, 0, 0.1);
    }

    header .left-section {
      display: flex;
      align-items: center;
    }

    header .left-section a {
      text-decoration: none;
      color: #333;
      font-weight: 600;
      margin-right: 20px;
      transition: color 0.3s ease;
    }

    header .left-section a:hover {
      color: #007bff;
    }

    header .left-section a:first-child {
      font-size: 24px;
      font-weight: bold;
    }

    header .right-section a {
      color: #555;
      margin: 0 15px;
      text-decoration: none;
      cursor: pointer;
      transition: color 0.3s ease, transform 0.2s ease;
    }

    .right-section a:hover{
      color: #007bff;
    }
    .right-section i:active{
      transform: scale(0.95);
    }

    header .right-section a:last-child {
      margin-right: 0;
    }

    .left-section a:active{
      transform: scale(0.95);
    }

  </style>
</head>
<body>
<header>
  <div class="left-section">
    <a asp-controller="Home" asp-action="Dashboard">BOOKBO</a>
    <a asp-controller="Home" asp-action="Dashboard">HOME</a>
  </div>
  <div class="right-section">
    <a href="#"><i style="font-size: 22px;" class="fa-solid fa-cart-shopping"></i></a>
    <a href="#"><i style="font-size: 22px" class="fa-solid fa-circle-user"></i></a>
    <a href="#"><i style="rotate: 180deg; font-size: 22px" class="fa-solid fa-arrow-right-from-bracket"></i></a>
  </div>
</header>
@RenderBody()
</body>
</html>
